@model AlloeHRMSystem.UI.ViewModels.AddTechSkillViewModel

@{
    ViewData["Title"] = "AddTechSkill";
}

<h1>AddTechSkill</h1>

<h4>EmployeeTechnicalSkill</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddTechSkill">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="EmployeeId" class="control-label"></label>
                <select asp-for="EmployeeId" class="form-control" asp-items="ViewBag.EmployeeId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="Level" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <select asp-for="Level" class="custom-select mr-sm-2"
                            asp-items="@Html.GetEnumSelectList<Level>()">
                        <option value="">Please select</option>

                    </select>
                    <span asp-validation-for="Level" class="text-danger"></span>

                </div>
            </div>

            <div class="form-group">
                <label asp-for="Notes" class="control-label"></label>
                <input asp-for="Notes" class="form-control" />
                <span asp-validation-for="Notes" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label asp-for="LevelId" class="control-label"></label>
                <input asp-for="LevelId" class="form-control" />
                <span asp-validation-for="LevelId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SkillId" class="control-label"></label>
                <input asp-for="SkillId" class="form-control" />
                <span asp-validation-for="SkillId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
            <div class="form-group">
                <p>
                    <a asp-action="AddTechSkill">Add More</a>
                </p>
            </div>
        </form>
        @if (TempData["successAlert"] != null)
        {
            <div class="alert alert-success">
                <a href="#" class="close" data-dismiss="alert" aria-label="close">×</a>
                <p>@TempData["successAlert"]</p>
            </div>
        }
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

