
@model EditUserViewModel

@{
    ViewBag.Title = "Edit User";
}

<h1>Edit User</h1>

<form method="post" class="mt-3">
    <div class="form-group row">
        <label asp-for="Id" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Id" disabled class="from-control" />

        </div>
    </div>
    @*<div class="form-group row">
        <label asp-for="EmployeeId" class="form-control"></label>
        <div class="col-sm-10">
            <input asp-for="EmployeeId" class="from-control" />
            <span asp-validation-for="EmployeeId" class="text-danger"></span>
        </div>

    </div>*@
    <div class="form-group row">
        <label asp-for="UserName" class="form-control"></label>
        <div class="col-sm-10">
            <input asp-for="UserName" class="from-control" />
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>

    </div>
    <div class="form-group row">
        <label asp-for="Email" class="form-control"></label>
        <div class="col-sm-10">
            <input asp-for="Email" class="from-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

    </div>

    <div class="form-group row">
        <label asp-for="Password" class="form-control"></label>
        <div class="col-sm-10">
            <input asp-for="Password" class="from-control" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

    </div>

    <div class="form-group row">
        <label asp-for="ConfirmPassword" class="form-control"></label>
        <div class="col-sm-10">
            <input asp-for="ConfirmPassword" class="from-control" />
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>

    </div>

    <div class="form-group row">
        <label asp-for="FirstName" class="form-control"></label>
        <div class="col-sm-10">
            <input asp-for="FirstName" class="from-control" />
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>

    </div>
    <div class="form-group row">
        <label asp-for="LastName" class="form-control"></label>
        <div class="col-sm-10">
            <input asp-for="LastName" class="from-control" />
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>

    </div>

    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Update</button>
            <a asp-action="ListUser" class="btn btn-primary">Cancel</a>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="CreatedBy" class="form-control"></label>
        <div class="col-sm-10">
            <input asp-for="CreatedBy" class="from-control" />
            <span asp-validation-for="CreatedBy" class="text-danger"></span>
        </div>

    </div>

    <div class="form-group row">
        <label asp-for="CreateDate" class="form-control"></label>
        <div class="col-sm-10">
            <input asp-for="CreateDate" class="from-control" />
            <span asp-validation-for="CreateDate" class="text-danger"></span>
        </div>

    </div>

    <div class="form-group row">
        <label asp-for="ModifyBy" class="form-control"></label>
        <div class="col-sm-10">
            <input asp-for="ModifyBy" class="from-control" />
            <span asp-validation-for="ModifyBy" class="text-danger"></span>
        </div>

    </div>

    <div class="form-group row">
        <label asp-for="Title" class="form-control"></label>
        <div class="col-sm-10">
            <input asp-for="Title" class="from-control" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

    </div>
    <div class="form-group row">
        <label asp-for="MobileNo" class="form-control"></label>
        <div class="col-sm-10">
            <input asp-for="MobileNo" class="from-control" />
            <span asp-validation-for="MobileNo" class="text-danger"></span>
        </div>

    </div>
    <div class="form-group row">
        <label asp-for="Language" class="form-control"></label>
        <div class="col-sm-10">
            <input asp-for="Language" class="from-control" />
            <span asp-validation-for="Language" class="text-danger"></span>
        </div>

    </div>
    <div class="form-group row">
        <label asp-for="Company" class="form-control"></label>
        <div class="col-sm-10">
            <input asp-for="Company" class="from-control" />
            <span asp-validation-for="Company" class="text-danger"></span>
        </div>

    </div>
    <div class="form-group row">
        <label asp-for="Department" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <select asp-for="Department" class="custom-select mr-sm-2"
                    asp-items="@Html.GetEnumSelectList<Dept>()">
                <option value="">Please select</option>

            </select>
            <span asp-validation-for="Department" class="text-danger"></span>

        </div>
    </div>

    <div class="form-group row">
        <label asp-for="JobTitle" class="form-control"></label>
        <div class="col-sm-10">
            <input asp-for="JobTitle" class="from-control" />
            <span asp-validation-for="JobTitle" class="text-danger"></span>
        </div>

    </div>

    <div class="form-group row">
        <label asp-for="HomePhone" class="form-control"></label>
        <div class="col-sm-10">
            <input asp-for="HomePhone" class="from-control" />
            <span asp-validation-for="HomePhone" class="text-danger"></span>
        </div>

    </div>
   
   
    <div class="form-group row">
        <label asp-for="LastPasswordUpdate" class="form-control"></label>
        <div class="col-sm-10">
            <input asp-for="LastPasswordUpdate" class="from-control" />
            <span asp-validation-for="LastPasswordUpdate" class="text-danger"></span>
        </div>

    </div>

   
    <div class="form-group">
        <div class="checkbox">
            <label asp-for="PasswordExpirationEnable">
                <input asp-for="PasswordExpirationEnable" />
                @Html.DisplayNameFor(m => m.PasswordExpirationEnable)
            </label>
        </div>
    </div>
    <div class="form-group">
        <div class="checkbox">
            <label asp-for="CanMakeCall">
                <input asp-for="CanMakeCall" />
                @Html.DisplayNameFor(m => m.CanMakeCall)
            </label>
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            <h3>User Roles</h3>
        </div>
        <div class="card-body">
            @if (Model.Roles.Any())
            {
                foreach (var role in Model.Roles)
                {
                    <h5 class="card-title">@role</h5>
                }
            }
            else
            {
                <h5 class="card-title">None at the moment</h5>
            }
        </div>
        <div class="card-footer">
            <a asp-action="ManageUserRoles" asp-route-userId="@Model.Id" style="width:auto" class="btn btn-primary">
                Manage Roles
            </a>
        </div>
    </div>

    <div class="card mt-3">
        <div class="card-header">
            <h3>User Claims</h3>
        </div>
        <div class="card-body">
            @if (Model.Claims.Any())
            {
                foreach (var claim in Model.Claims)
                {
                    <h5 class="card-title">@claim</h5>
                }
            }
            else
            {
                <h5 class="card-title">None at the moment</h5>
            }
        </div>
        <div class="card-footer">
            <a asp-action="ManageUserClaims" asp-route-userId="@Model.Id"
               style="width:auto" class="btn btn-primary">
                Manage Claims
            </a>
        </div>
    </div>

</form>
